@inject Microsoft.AspNetCore.Identity.SignInManager<Identity.Models.ApplicationUser> signInManager

<style>
    .custom-dropdown .dropdown-menu {
        border: none;
    }
</style>

@if (signInManager.IsSignedIn(User))
{
    <form method="post" id="logoutForm" asp-action="logout" asp-controller="Account">
        <ul class="nav navbar-nav">
            <li class="nav-link">Hello, @User.Identity.Name! </li>
            <li><a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()">Logout</a></li>
        </ul>
    </form> 
}
else
{
    <ul class="nav navbar-nav">
        <li class="nav-item">
            @*@Html.ActionLink("Sign Up","Register","Account",routeValues:null,htmlAttributes:new {id="registerLink"})*@
            <a id="registerLink" class="nav-link "  asp-action="Register" asp-controller="Account">Register</a>
        </li>
        <li><a id="loginLink" class="nav-link " asp-action="Login" asp-controller="Account">Login</a></li>
    </ul>
}