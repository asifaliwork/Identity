@model ApplicationUser
<form asp-controller="Account" asp-action="DeletePost" method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">

        <div class="form-group row">

            <h2 class="text-primary"> Delete User</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-4">
                        User Name
                    </div>
                    <div class="col-4">
                        User Email
                    </div>
                    <div class="col-4">
                        User Role
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="UserName" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Email" disabled class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-success">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


