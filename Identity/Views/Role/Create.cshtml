@model IdentityRole

<form asp-controller="Role" asp-action="Create" method="post">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly " class="text-danger"> </div>
        <div class="form-group row">
            <h2 class="text-primary"> Add Role</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">

                    <div class="col-4"> 
                        Role Name
                    </div>
              
                </div>
                <div class="form-group row">

                    <div class="col-4">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-8 text-center row">
                        <div class="col-4">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col-4">
                            <a asp-action="Index" class="btn btn-danger">Back</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

 @section Scripts {
     @{
         <partial name="_ValidationScriptsPartial" />
     }
 }
